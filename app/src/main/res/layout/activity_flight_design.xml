<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".FlightDetailsActivity">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/curved_header"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:layout_alignParentStart="true"
            android:contentDescription="Back" />

        <ImageView
            android:id="@+id/iv_airline_logo"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_7" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_download_ticket"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Download E-Ticket"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:backgroundTint="@color/myBlue"
        app:cornerRadius="12dp"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/card_flight_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="120dp"
        android:padding="16dp"
        android:elevation="8dp"
        android:background="@drawable/dialog_rounded_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 December 2022"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/ll_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:id="@+id/tv_del_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEL"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_del_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delhi International Airport"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_blr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:id="@+id/tv_blr_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLR"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_blr_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bengaluru Airport India"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/ll_del"
                    android:layout_toStartOf="@id/ll_blr">
                    <ImageView
                        android:id="@+id/iv_flight_path"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_flight_path"
                        app:tint="@color/black" />
                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04h 30m"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/ll_passenger_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="19.78dp"
                        android:layout_height="19.78dp"
                        android:src="@drawable/ic_person"
                        app:tint="@color/black"
                        android:contentDescription="Passenger" />
                    <TextView
                        android:id="@+id/tv_passenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="01 Adult"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_meal_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="19.78dp"
                        android:layout_height="19.78dp"
                        android:src="@drawable/img_2"
                        app:tint="@color/black"
                        android:contentDescription="Meal" />
                    <TextView
                        android:id="@+id/tv_meal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Meal"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.38"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_passenger_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passenger Name"
                        android:textColor="@color/grey_light"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tv_passenger_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shreya Kumar"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_flight_type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flight Type"
                        android:textColor="@color/grey_light"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tv_flight_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Economy"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.34"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_flight_code_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flight Code"
                        android:textColor="@color/grey_light"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tv_flight_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IG-2105"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_boarding_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boarding Time"
                        android:textColor="@color/grey_light"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tv_boarding_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06:15 AM"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_gate_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gate"
                        android:textColor="@color/grey_light"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tv_gate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A5"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.19"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_terminal_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terminal"
                        android:textColor="@color/grey_light"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tv_terminal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T2"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_seat_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seat"
                        android:textColor="@color/grey_light"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tv_seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A5"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"

                android:background="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/iv_barcode"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/img_4"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_barcode_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1 2 5 8 4 6 2 4 2 7 5 3 1 3 5 0 6 7 5 9"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/card_flight_details"
        android:layout_above="@id/btn_download_ticket">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_terms_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Terms &amp; Condition"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_terms_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Oumlltibr ultriber nisl ac vulputate looinio. Denec proretro tincidunt velit, sed iaculis est sollicitudin ac."
                android:textColor="@color/grey_light"
                android:textSize="10sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>